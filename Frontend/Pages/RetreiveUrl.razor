@page "/RetrieveUrl"
@inject HttpClient Http

<h2>Retrieve Original URL</h2>

<div class="form-container">
    <label for="shortCode">Enter Short Code:</label>
    <input type="text" id="shortCode" class="input-field" @bind="shortCode" />

    <button class="btn" @onclick="RetrieveOriginalUrl">Retrieve URL</button>
</div>

@if (!string.IsNullOrEmpty(originalUrl))
{
    <div class="result-container">
        <p><strong>Original URL:</strong> <a href="@originalUrl" target="_blank">@originalUrl</a></p>
    </div>
}

@code {
    private string shortCode;
    private string originalUrl;

    private async Task RetrieveOriginalUrl()
    {
        if (!string.IsNullOrWhiteSpace(shortCode))
        {
            var response = await Http.GetAsync($"Url/{shortCode}");

            if (response.IsSuccessStatusCode)
            {
                originalUrl = await response.Content.ReadAsStringAsync();
            }
            else
            {
                originalUrl = "Short URL not found!";
            }
        }
    }
}
