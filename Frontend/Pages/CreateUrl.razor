@page "/CreateUrl"
@inject HttpClient Http

<h3>URL Shortener</h3>

@if (isLoading)
{
    <p>Processing...</p>
}
else
{
    <div class="container">
        <input @bind="originalUrl" placeholder="Enter a URL" class="url-input" />
        <button @onclick="GenerateShortUrl" class="shorten-btn">Shorten URL</button>

        @if (!string.IsNullOrEmpty(shortenedUrl))
        {
            <div class="result">
                <p>Shortened URL: <a href="@originalUrl" target="_blank">@shortenedUrl</a></p>
            </div>
        }
    </div>
}

@code {
    private string originalUrl;
    private string shortenedUrl;
    private bool isLoading = false;

    private async Task GenerateShortUrl()
    {
        if (string.IsNullOrWhiteSpace(originalUrl)) return;

        isLoading = true;
        shortenedUrl = string.Empty;

        var response = await Http.PostAsJsonAsync("Url/create", originalUrl);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<UrlResponse>();
            shortenedUrl = result?.shortUrl ?? "Error generating URL";
        }
        else
        {
            shortenedUrl = "Failed to create short URL";
        }

        isLoading = false;
    }

    private class UrlResponse
    {
        public string OriginalUrl { get; set; }
        public string shortUrl { get; set; }
    }
}
